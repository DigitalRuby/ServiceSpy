{
    "Logging":
    {
        "LogLevel":
        {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ServiceSpy":
    {
        "Services":
        {
            "Storage": "InMemory", // only InMemory supported for now
            "Items":
            [
                {
                    "Id": "459F9F45-B520-42F9-C5BD-373667624231"
                    // rest of service info is received via udp
                }
            ]
        },
        "HealthChecks":
        {
            "PerformHealthChecks": true, // perform and send health check notifications
            "Storage": "InMemory" // only InMemory supported for now
        },
        "Notifications":
        {
            "Broadcast": false, // only receive notifications
            "Connection":
            {
                "IPAddress": "*",
                "Port": 7777,
                "Protocol": "Udp"
            }
        }
    }
}
