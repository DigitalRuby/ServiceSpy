{
    "Logging":
    {
        "LogLevel":
        {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ServiceSpy":
    {
        "Services":
        {
            "Storage": "InMemory", // only InMemory supported for now
            "Items":
            [
                {
                    "Id": "459F9F45-B520-42F9-C5BD-373667624231",
                    "Name": "ServiceSpyTest",
                    // "Version" auto populated from entry assembly
                    "Group": "USEastAZ1",
                    "IPAddressString": "*", // pick any ip
                    "Port": 7172,
                    "Host": "localhost",
                    "Path": "/",
                    "HealthCheckPath": "/health-check"
                }
            ]
        },
        "HealthChecks":
        {
            "HealthCheckInterval": 0, // interval in seconds to perform health checks or 0 to not perform health checks (ignored if PerformHealthChecks is false)
            "HealthyCacheTime": 5, // cache healthy results for 5 seconds
            "CleanupInterval": 5, // interval in seconds to check for expired health check metadata
            "ExpireTime": 300, // interval in seconds to purge expired metadata that has not had a health check result
            "Storage": "InMemory" // only InMemory supported for now
        },
        "Notifications":
        {
            "BroadcastInterval": 5, // send and receive notifications every 5 seconds
            "Connection":
            {
                "IPAddress": "*",
                "Port": 7777,
                "Protocol": "Udp"
            }
        }
    }
}
